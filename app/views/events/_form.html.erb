<%= form_with(model: event, local: true) do |form| %>
    <% if event.errors.any? %>
      <div class="alert alert-error mb-6">
        <h2 class="font-bold"><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
        <ul>
          <% event.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-control mb-4">
      <%= form.label :title, class: 'label' %>
      <%= form.text_field :title, class: 'input input-bordered w-full' %>
    </div>
  
    <div class="form-control mb-4">
      <%= form.label :description, class: 'label' %>
      <%= form.text_area :description, class: 'textarea textarea-bordered w-full' %>
    </div>
  
    <div class="form-control mb-4">
      <%= form.label :start_time, class: 'label' %>
      <%= form.datetime_local_field :start_time, class: 'input input-bordered w-full' %>
    </div>
  
    <div class="form-control mb-4">
      <%= form.label :end_time, class: 'label' %>
      <%= form.datetime_local_field :end_time, class: 'input input-bordered w-full' %>
    </div>
  
    <div class="form-control mb-4">
      <%= form.label :location, class: 'label' %>
      <%= form.text_field :location, class: 'input input-bordered w-full' %>
    </div>
  
    <div class="actions">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>