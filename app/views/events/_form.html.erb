<%= form_with(model: event, class: "event-form") do |form| %>
  <% if event.errors.any? %>
    <div class="alert alert-error">
      <h3><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h3>
      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter event title" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", placeholder: "Enter event description" %>
  </div>

  <div class="form-group">
    <%= form.label :start_time %>
    <%= form.datetime_local_field :start_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :end_time %>
    <%= form.datetime_local_field :end_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :location %>
    <%= form.text_field :location, class: "form-control", placeholder: "Enter event location" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to 'Cancel', events_path, class: 'btn btn-outline' %>
  </div>
<% end %>