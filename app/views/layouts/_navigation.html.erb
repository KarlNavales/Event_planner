<%# app/views/layouts/_navigation.html.erb %>

<nav class="navbar">
  <div class="navbar-brand">
    <%= link_to root_path, class: "logo" do %>
      EventPlanner
    <% end %>
  </div>
  
  <div class="navbar-links">
    <% if user_signed_in? %>
      <%= link_to "Dashboard", root_path, class: "navbar-link #{'active' if current_page?(root_path)}" %>
      <%= link_to "Events", events_path, class: "navbar-link #{'active' if current_page?(events_path)}" %>
      <%= link_to "Calendar", calendar_path, class: "navbar-link #{'active' if current_page?(calendar_path)}" %>
      
      <div class="navbar-user">
        <span class="user-email"><%= current_user.email %></span>
        <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "navbar-logout" %>
      </div>
    <% else %>
      <%= link_to "Features", "#", class: "navbar-link" %>
      <%= link_to "Pricing", "#", class: "navbar-link" %>
      <%= link_to "Log In", new_user_session_path, class: "navbar-link #{'active' if current_page?(new_user_session_path)}" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</nav>